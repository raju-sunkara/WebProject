# docker-compose.yml

version: '3'

services:
  backend:
    build: ./backend
    ports:
      - 5000:5000
    depends_on:
      - database

  frontend:
    build: ./frontend
    ports:
      - 3000:3000
    depends_on:
      - backend

  database:
    image: mysql:latest
    ports:
      - 3306:3306
    environment:
      - MYSQL_ROOT_PASSWORD=secret
      - MYSQL_DATABASE=shopping_cart
